generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
  SPAM
}

// Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          UserRole  @default(VIEWER)
  image         String?
  bio           String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  content       Content[]
  comments      Comment[]
  sessions      Session[]
  accounts      Account[]
  
  @@index([email])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Content {
  id                String         @id @default(cuid())
  title             String
  slug              String         @unique
  body              String
  excerpt           String?
  status            ContentStatus  @default(DRAFT)
  featuredImageUrl  String?        @map("featured_image_url")
  publishedAt       DateTime?      @map("published_at")
  
  // SEO
  metaTitle         String?        @map("meta_title")
  metaDescription   String?        @map("meta_description")
  metaKeywords      String?        @map("meta_keywords")
  
  // AI Insights (JSON)
  aiSummary         String?        @map("ai_summary")
  aiSentiment       String?        @map("ai_sentiment")
  aiTags            String?        @map("ai_tags") // Comma-separated
  seoScore          Int?           @map("seo_score")
  readabilityScore  Float?         @map("readability_score")
  
  // Relations
  authorId          String         @map("author_id")
  author            User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  categoryId        String?        @map("category_id")
  category          Category?      @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  comments          Comment[]
  tags              ContentTag[]
  analytics         Analytics?
  
  createdAt         DateTime       @default(now()) @map("created_at")
  updatedAt         DateTime       @updatedAt @map("updated_at")

  @@index([slug])
  @@index([authorId])
  @@index([categoryId])
  @@index([status])
  @@index([publishedAt])
  @@map("content")
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  color       String?   // Hex color for UI
  icon        String?   // Icon name from Lucide
  
  content     Content[]
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([slug])
  @@map("categories")
}

model Tag {
  id        String       @id @default(cuid())
  name      String       @unique
  slug      String       @unique
  
  content   ContentTag[]
  
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  @@index([slug])
  @@map("tags")
}

model ContentTag {
  contentId String  @map("content_id")
  tagId     String  @map("tag_id")
  
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([contentId, tagId])
  @@index([contentId])
  @@index([tagId])
  @@map("content_tags")
}

model Comment {
  id        String        @id @default(cuid())
  body      String
  status    CommentStatus @default(PENDING)
  
  authorId  String        @map("author_id")
  author    User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  contentId String        @map("content_id")
  content   Content       @relation(fields: [contentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")

  @@index([authorId])
  @@index([contentId])
  @@index([status])
  @@map("comments")
}

model Analytics {
  id              String   @id @default(cuid())
  contentId       String   @unique @map("content_id")
  views           Int      @default(0)
  uniqueVisitors  Int      @default(0) @map("unique_visitors")
  avgTimeOnPage   Float    @default(0) @map("avg_time_on_page") // in seconds
  bounceRate      Float    @default(0) @map("bounce_rate")
  
  // Engagement
  likes           Int      @default(0)
  shares          Int      @default(0)
  
  content         Content  @relation(fields: [contentId], references: [id], onDelete: Cascade)
  
  lastViewed      DateTime @default(now()) @map("last_viewed")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@index([contentId])
  @@map("analytics")
}

model Media {
  id          String   @id @default(cuid())
  url         String
  filename    String
  mimeType    String   @map("mime_type")
  size        Int      // in bytes
  alt         String?
  caption     String?
  
  uploadedBy  String   @map("uploaded_by")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([uploadedBy])
  @@map("media")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  action    String   // CREATE, UPDATE, DELETE, etc.
  entity    String   // Content, User, etc.
  entityId  String   @map("entity_id")
  details   String?  // JSON string
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}
